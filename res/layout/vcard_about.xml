<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ProgressBar android:id="@+id/progress"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        style="?android:attr/progressBarStyleLarge" />
    
    <ScrollView	android:id="@+id/scroll" android:layout_height="wrap_content" android:layout_width="fill_parent">
    	<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">
    		
            <TextView 
                android:text="@string/FirstName"
                android:textStyle="bold"
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/firstname"
                android:autoLink="all"
                android:layout_marginLeft="16dip" 
            	android:singleLine="true"
            	android:textIsSelectable="true"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" />
            	
            <TextView 
                android:text="@string/MiddleName"
                android:textStyle="bold"
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/middlename" 
                android:autoLink="all"
                android:layout_marginLeft="16dip"
            	android:singleLine="true"
            	android:textIsSelectable="true"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" />
            	
            <TextView 
                android:text="@string/LastName"
                android:textStyle="bold"
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/lastname"
                android:autoLink="all"
                android:layout_marginLeft="16dip"
            	android:singleLine="true"
            	android:textIsSelectable="true"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" />
            	
            <TextView 
                android:text="@string/NickName"
                android:textStyle="bold"
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/nickname"
                android:autoLink="all"
                android:layout_marginLeft="16dip" 
            	android:singleLine="true"
            	android:textIsSelectable="true"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" />
            	
            <TextView 
                android:text="@string/Birthday"
                android:textStyle="bold"
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/bday" 
                android:autoLink="all"
                android:layout_marginLeft="16dip" 
            	android:singleLine="true"
            	android:textIsSelectable="true"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" />
            	
            <TextView 
                android:text="@string/Url"
                android:textStyle="bold"
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/url" 
                android:autoLink="all"
                android:layout_marginLeft="16dip"
            	android:singleLine="true"
            	android:textIsSelectable="true"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" />
            	
            <TextView 
                android:text="@string/About"
                android:textStyle="bold"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
            
            <TextView 
                android:id="@+id/desc" 
            	android:lines="6"
            	android:autoLink="all"
            	android:textIsSelectable="true"
                android:layout_marginLeft="16dip"
            	android:layout_height="wrap_content" 
            	android:layout_width="fill_parent" 
            	android:gravity="top"/>
   	    </LinearLayout>
    </ScrollView>
</LinearLayout>