<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <ScrollView android:layout_height="wrap_content" android:layout_width="fill_parent">
    	<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">
    		<LinearLayout android:orientation="horizontal" 
    			android:layout_width="fill_parent" 
    			android:layout_height="wrap_content">
    			<Button android:id="@+id/load_button"
    				android:layout_weight="1"
    				android:layout_width="fill_parent" 
    				android:text="@string/Load"
    				android:layout_height="wrap_content" />
    			<Button android:id="@+id/clear_button"
    				android:layout_weight="1"
    				android:layout_width="fill_parent" 
    				android:text="@string/Clear" 
    				android:layout_height="wrap_content" />
    		</LinearLayout>
            <ImageView android:id="@+id/av" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center"></ImageView>
   	 </LinearLayout>
    </ScrollView>
</LinearLayout>