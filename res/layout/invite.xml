<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linear"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingTop="3dip">

    <ScrollView android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
        <LinearLayout android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_height="fill_parent"
                      android:layout_width="fill_parent">

            <TextView android:text="To:"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:id="@+id/to"
                      android:layout_marginLeft="10dip"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:text="From:"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:id="@+id/from"
                      android:layout_marginLeft="10dip"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:text="Room:"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:id="@+id/room"
                      android:layout_marginLeft="10dip"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:text="Reason:"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <TextView android:id="@+id/reason"
                      android:layout_marginLeft="10dip"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />

            <EditText android:id="@+id/nick"
                      android:layout_width="match_parent"
                      android:singleLine="true"
                      android:layout_height="wrap_content"
                      android:hint="@string/Nick" />

            <CheckBox android:id="@+id/add"
                      android:layout_width="match_parent"
                      android:singleLine="true"
                      android:layout_height="wrap_content"
                      android:hint="Add to bookmarks"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout android:layout_weight="0"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <Button android:id="@+id/ok"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="Ok"/>
        <Button android:id="@+id/cancel"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
    </LinearLayout>
</LinearLayout>